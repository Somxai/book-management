<div id="<%= dom_id book %>" class="card mb-3">
  <div class="card-body">
    <h3> Title </h3>
    <h5 class="card-title">
      <%= book.title %>
    </h5>
    <p class="card-text">
      <strong>Publisher:</strong> <%= book.publisher %>
    </p>
    <p class="card-text">
      <strong>Price:</strong> $<%= book.price %>
    </p>
    <p class="card-text">
      <strong>Author:</strong> <%= book.author.name %>
    </p>
  </div>
</div>