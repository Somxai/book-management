<%= form_with model: @book local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
  </div>

  <div class="form-group">
    <%= form.label :publisher, class: 'form-label' %>
    <%= form.text_area :publisher, class: 'form-control', placeholder: 'Enter publisher' %>
  </div>

  <div class="form-group">
    <%= form.label :price, class: 'form-label' %>
    <%= form.number_field :price, class: 'form-control', placeholder: 'Enter price' %>
  </div>

  <div class="form-group">
    <%= form.label :author, class: 'form-label' %>
    <%= form.text_field :author_id, class: 'form-control', placeholder: 'Enter author ID' %>
  </div>

  <%= form.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
